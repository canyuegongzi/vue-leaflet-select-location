.select-location
    position relative
    width 100%
    height 100%
    .select-location-con
        display flex
        justify-content space-between
        height 100%
        width 100%
        >>>.select-longitude
        >>>.select-latitude
                margin-top 0
                margin-right 0
                margin-left 0
                position relative
            .el-input
                .el-input__inner
                    height 28px
                    font-size 12px
    .map-icon
        margin-left 8px
        color #E12234
        font-size 24px
        vertical-align middle
        cursor pointer
        position: absolute
        top 50%
        right -36px
        transform translateY(-50%)
    .map-box
        height 330px
        border 1px solid #E0E0E0
        overflow hidden
    .map-search
        position absolute
        right 32px
        top 60px
        z-index 999
        width 200px
    .mapTip
        position absolute
        left 50%
        bottom 0
        margin-left -180px
        width 360px
        height 28px
        background rgba(0, 0, 0, 0.6)
        border-radius 28px
        font-size 0
        z-index 999
        .text
            display inline-block
            width 180px
            line-height 28px
            text-align center
            font-size 12px
            color #fff
.map-search-list
    position absolute
    right 32px
    top 88px
    z-index 999
    width 200px